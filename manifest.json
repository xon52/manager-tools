{
  "manifest_version": 3,
  "name": "Manager Tools",
  "version": "1.0",
  "description": "Suite of management tools in your browser",
  "background": {
    "service_worker": "src/background.ts"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "sidePanel",
    "management"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.ts"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
